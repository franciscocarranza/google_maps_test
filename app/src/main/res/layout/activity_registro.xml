<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroActivity"
    android:background="@drawable/register_background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_logo"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ly_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_logo"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/nombre"
            android:textColor="@color/blanco"
            android:padding="10dp"
            android:background="@drawable/round_corners"
            android:drawableStart="@drawable/ic_skull"
            android:drawablePadding="25dp"
            android:drawableTint="@color/blanco"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ly_contraseña"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly_name"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_contraseña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/password"
            android:textColor="@color/blanco"
            android:padding="10dp"
            android:background="@drawable/round_corners"
            android:drawableStart="@drawable/ic_key"
            android:drawablePadding="25dp"
            android:drawableTint="@color/blanco"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ly_correo"
        android:layout_below="@id/ly_contraseña"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/email"
            android:textColor="@color/blanco"
            android:padding="10dp"
            android:background="@drawable/round_corners"
            android:drawableStart="@drawable/ic_mail"
            android:drawablePadding="25dp"
            android:drawableTint="@color/blanco"/>

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/ly_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly_correo"
        android:layout_marginLeft="20dp">

        <CheckBox
            android:id="@+id/check_accepto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/blanco"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acepto los terminos y condiciones"
            android:textColor="@color/blanco"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_crear_cuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly_check"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:layout_marginStart="140dp"
        android:background="@drawable/round_btn"
        android:textColor="@color/grey"
        android:text="@string/crear_cuenta"/>

</RelativeLayout>