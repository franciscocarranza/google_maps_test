<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".view.activities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusableInTouchMode="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="40dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_logo"
            android:layout_alignParentTop="true"/>

        <RelativeLayout
            android:id="@+id/ly_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_logo"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_corners">


            <ImageView
                android:id="@+id/img_skull"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_skull"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp" />

            <EditText
                android:id="@+id/edt_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/img_skull"
                android:textColorHint="@color/blanco"
                android:textColor="@color/blanco"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                android:hint="@string/user_name"
                android:padding="3dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ly_username"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_corners">

            <ImageView
                android:id="@+id/img_key"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_key"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:padding="2dp"/>

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/img_key"
                android:textColorHint="@color/blanco"
                android:textColor="@color/blanco"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@android:color/transparent"
                android:hint="@string/password"
                android:padding="3dp" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_btn"
            android:layout_below="@id/ly_password"
            android:layout_marginEnd="85dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="30dp"
            android:text="@string/entrar"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textColor="@color/dark_grey"/>

        <TextView
            android:id="@+id/txt_no_tienes_cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@id/btn_map"
            android:textAllCaps="true"
            android:text="@string/no_tienes_cuenta"
            android:textSize="16sp"
            android:textColor="@color/blanco"/>

        <TextView
            android:id="@+id/txt_haz_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/txt_no_tienes_cuenta"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/line"
            android:text="@string/haz_click_aqui"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textColor="@color/blanco"/>

    </RelativeLayout>

</ScrollView>